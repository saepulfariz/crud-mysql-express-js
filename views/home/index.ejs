<%- include('../template/header.ejs'); %>

<div class="container">
    <div class="row">
        <div class="col">
            <h3><%= data %> </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <a href="/mahasiswa/new" class="btn btn-sm btn-primary">New</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>NPM</th>
                            <th>NAMA</th>
                            <th>EMAIL</th>
                            <th>JURUSAN</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% a=1; mahasiswa.forEach(function(d) { %>
                        <tr>
                            <th scope="row"><%= a++; %></th>
                            <td><%= d.npm %></td>
                            <td><%= d.nama %></td>
                            <td><%= d.email %></td>
                            <td><%= d.jurusan %></td>
                            <td>
                                <a href="/mahasiswa/<%= d.id %>" class="btn btn-sm mb-2 btn-info">View</a>
                                <a href="/mahasiswa/<%= d.id %>/edit" class="btn btn-sm mb-2 btn-warning">Edit</a>
                                <a href="/mahasiswa/<%= d.id %>/delete" onclick="return confirm('Yes to delete it?')"
                                    class="btn btn-sm mb-2 btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<%- include('../template/footer.ejs'); %>